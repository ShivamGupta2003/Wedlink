<!-- Offcanvas Navbar (for mobile) -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
            <i class="fas fa-rings me-2"></i>WedInk
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/listings">
                    <i class="fas fa-home me-2"></i>Home
                </a>
            </li>
            <% if(!curruser){ %>
                <li class="nav-item">
                    <a class="nav-link" href="/login">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/signup">
                        <i class="fas fa-user-plus me-2"></i>Sign Up
                    </a>
                </li>
                <% } %>
                    <% if(curruser){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/bookings">
                                <i class="fas fa-calendar-check me-2"></i>My Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </li>
                        <% } %>
        </ul>
        <form action="/listings" method="GET" class="mt-4">
            <div class="input-group">
                <input class="form-control" type="search" name="shopName" placeholder="Search shop..."
                    aria-label="Search">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Main Navbar -->
<nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar">
            <i class="fas fa-bars text-white"></i>
        </button>

        <a class="navbar-brand" href="/">
            <i class="fa-regular fa-compass mass"></i>
        </a>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">WedInk</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/listings">Home</a>
                </li>
                
                <% if(!curruser){ %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signup">Sign Up</a>
                    </li>
                    <% } %>
                        <% if(curruser){ %>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/bookings">My Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">Logout</a>
                            </li>
                            <% } %>
            </ul>

            <form action="/listings" method="GET" class="d-flex">
                <div class="input-group">
                    <input class="form-control" type="search" name="shopName" placeholder="Search shop..."
                        aria-label="Search">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</nav>

