<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WedInk Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2) !important;
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
            border-color: #28a745;
            transition: all 0.3s ease;
        }
        .btn-success {
            transition: all 0.3s ease;
        }
        .btn-success:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
        }
        .form-label {
            transition: color 0.3s ease;
        }
        .form-control:focus + .form-label,
        .form-control:not(:placeholder-shown) + .form-label {
            color: #28a745;
        }
        .move-up {
            margin-top: -145px !important; /* Adjust the value as needed */
        }
    </style>
</head>
<body class="bg-light">
    <% layout("/layouts/boilerplate") %>
    <div class="container min-vh-100 d-flex align-items-center">
        <div class="row justify-content-center w-100 move-up">
            <div class="col-lg-5 col-md-7 col-sm-12">
                <div class="card shadow-lg p-4 animate__animated animate__fadeInUp">
                    <div class="text-center mb-4 animate__animated animate__fadeInDown">
                        <span class="fs-1">ðŸ’Œ</span>
                        <h2 class="text-success fw-bold">Create Your Account</h2>
                        <p class="text-muted">Sign up to create beautiful Celebration Cards</p>
                    </div>

                    <form action="/signup" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3 animate__animated animate__fadeInLeft" style="animation-delay: 0.2s">
                            <label class="form-label fw-bold">Username</label>
                            <input type="text" name="username" class="form-control border-success" placeholder="Choose a username" required>
                            <div class="invalid-feedback">Please enter a valid username</div>
                        </div>
                        
                        <div class="mb-3 animate__animated animate__fadeInRight" style="animation-delay: 0.3s">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" name="email" class="form-control border-success" placeholder="Enter your email" required>
                            <div class="invalid-feedback">Please enter a valid email</div>
                        </div>

                        <div class="mb-3 animate__animated animate__fadeInLeft" style="animation-delay: 0.4s">
                            <label class="form-label fw-bold">Password</label>
                            <input type="password" name="password" class="form-control border-success" placeholder="Create a password" required>
                            <div class="invalid-feedback">Password must be at least 6 characters</div>
                        </div>
                        
                        <div class="text-center animate__animated animate__fadeInUp" style="animation-delay: 0.5s">
                            <button type="submit" class="btn btn-success btn-lg w-100 shadow">
                                Sign Up
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-3 animate__animated animate__fadeIn" style="animation-delay: 0.6s">
                        <a href="/login" class="text-success text-decoration-none">Already have an account? Log in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add floating labels behavior
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.closest('.mb-3').querySelector('.form-label').style.color = '#28a745';
            });
            input.addEventListener('blur', function() {
                if (!this.value) {
                    this.closest('.mb-3').querySelector('.form-label').style.color = '';
                }
            });
        });
    </script>
</body>
</html>