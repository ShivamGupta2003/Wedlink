<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marriage</title>
    <link rel="stylesheet" href="css/style.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    
   
    <% layout("/layouts/boilerplate") %>
    <hr>

    <div class="container mt-4">
        <h3>All Listings</h3>

        <form method="GET" action="/listings/new">
            <button type="submit" class="btn btn-primary mb-3">Create New Listing</button>
        </form>

        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 row-cols-lg-4 g-4">
            <% for(let listing of alllistings) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
                        <div class="card listing-card shadow-sm h-100" style="width: 100%;">
                            <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
                            <div class="card-body">
                                <p class="card-text text-dark"> 
                                    <b><%= listing.shopName %></b><br>
                                    â‚¹ <%= listing.price.toLocaleString("en-IN") %> /night
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    
</body>
</html>
