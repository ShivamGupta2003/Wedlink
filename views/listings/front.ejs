<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

<script>
    function animateTextInfinite() {
        const text = "WedInk";
        const animatedTextElement = document.getElementById("animatedText");

        let index = 0;
        animatedTextElement.innerHTML = ""; // Clear text before each animation

        function showLetter() {
            if (index < text.length) {
                animatedTextElement.innerHTML += text[index];
                index++;
                setTimeout(showLetter, 400); // Delay each letter by 400ms
            } else {
                setTimeout(() => {
                    animatedTextElement.innerHTML = ""; // Clear text
                    index = 0; // Reset index
                    showLetter(); // Restart animation
                }, 6000); // Wait 1 sec before restarting
            }
        }

        showLetter();
    }

    document.addEventListener("DOMContentLoaded", animateTextInfinite);
</script>
