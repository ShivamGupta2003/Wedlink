    <style>
   .video-section {
    position: relative;
    width: 100%;
    height: 100vh; 
    overflow: hidden;
}


.video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  
    background-color: rgba(0, 0, 0, 0.6) !important;
}


.video-container video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    z-index: -1;
}

/* Content Overlay */
.content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    z-index: 1;
}

/* Content Style */
h1 {
    font-size: 5rem !important;
}

p {
    font-size: 1.2rem; 
}

/* Larger h1 and smaller p on mobile screens */
@media (max-width: 912px) {
    h1 {
        font-size: 4rem !important;
        margin-bottom: .6rem !important; 
    }
    p {
        font-size: 0.7rem  !important; 
    }
    .btn {
        font-size: 1rem;
        padding: 12px 20px ;
    }
}

@media (min-width: 320px) and (max-width: 941px) {
    h1 {
        font-size: 4.5rem ;
    }
    p {
        font-size: 0.8rem;
    }
    .btn {
        font-size: 1.2rem;
        padding: 15px 25px;
    }

    .navbar-toggler {
    margin-left: 10px !important; 
}

}






/* Styling for button */
.btn-lg {
    font-size: 1.5rem;
    padding: 15px 30px;
    margin-left: 15px;
}

/* Round button style */
.roundess {
    border-radius: 90% !important;
    font-size: 1rem;
}

@keyframes fadeBounce {
        0% {
            opacity: 0;
            transform: translateY(-30px);
        }
        50% {
            opacity: 0.5;
            transform: translateY(10px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Apply Animation */
    .animated-text {
        color: skyblue !important;
        text-decoration: underline !important;
        font-size: 5rem !important;
        animation: fadeBounce 1.5s ease-in-out forwards;
    }

    /* Responsive Size */
    @media (max-width: 768px) {
        .animated-text {
            font-size: 3.5rem !important;
        }
    }


    .pop-button {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        animation: popAnimation 1.5s infinite ease-in-out;
    }

    /* Pop Effect on Hover */
    .pop-button:hover {
        transform: scale(1.15);
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.3);
    }

    /* Pop Effect on Click */
    .pop-button:active {
        transform: scale(0.9);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    /* Infinite Pop Animation */
    @keyframes popAnimation {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }

    </style>
